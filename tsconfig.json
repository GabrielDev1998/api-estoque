{
  "compilerOptions": {
    "target": "es2020",                               
    "rootDir": "./src",                                  
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true  ,
    "moduleResolution": "node"                         
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tsup.config.ts"]
}
